@model BorrowingRecords

<h2>Return Book</h2>

<div class="form-group">
    <label for="BookTitle">Book Title</label>
    <input type="text" class="form-control" id="BookTitle" value="@Model.Book.Title" disabled />
</div>

<div class="form-group">
    <label for="UserName">Borrowed By</label>
    <input type="text" class="form-control" id="UserName" value="@Model.User.UserName" disabled />
</div>

<div class="form-group">
    <label for="BorrowDate">Borrow Date</label>
    <input type="text" class="form-control" id="BorrowDate" value="@Model.IssueDate.ToShortDateString()" disabled />
</div>

<form asp-action="Return" method="post">
    <button type="submit" class="btn btn-primary">Return Book</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back</a>
