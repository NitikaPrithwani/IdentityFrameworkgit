
@using IdentityFramework.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IdentityFrameworkDbContext _context
@{
    ViewData["Title"] = "Home Page";
    var totalBooks = _context.Books.Count(); 
    var totalUsers = _context.Users.Count();
    var booksIssued = _context.BorrowingRecords.Count();
    var availableBooks = totalBooks - booksIssued; 
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-dashboard {
        padding: 30px;
        background-color: #f9f9f9;
        flex-grow: 1;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .dashboard-header h1 {
            font-size: 2.5rem;
            color: #34495e;
        }

        .dashboard-header p {
            font-size: 1.2rem;
            color: #7f8c8d;
        }

    .stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .stat-card h3 {
            font-size: 1.5rem;
            color: #34495e;
        }

        .stat-card p {
            font-size: 2.5rem;
            color: #3498db;
            font-weight: bold;
        }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 40px;
    }

    .card {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .card h2 {
            font-size: 1.8rem;
            color: #2c3e50;
        }

        .card p {
            font-size: 1rem;
            color: #7f8c8d;
            margin-bottom: 20px;
        }

    .button {
        background-color: #3498db;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
    }

        .button:hover {
            background-color: #2980b9;
        }

    .chart-section {
        margin-top: 40px;
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .chart-section h2 {
            font-size: 1.8rem;
            color: #34495e;
            text-align: center;
            margin-bottom: 20px;
        }
       
</style>


<div class="main-dashboard">
    <div class="dashboard-header">
        <h1>LMS Dashboard</h1>
        <p>Here's a quick overview of your Library System.</p>
    </div>


    <div class="stats">
        <div class="stat-card">
            <p>📚</p>
            <h3>Total Books</h3>
            <p id="total-books">@totalBooks</p>
        </div>
        <div class="stat-card">
            <p>👤</p>
            <h3>Total Users</h3>
            <p id="total-users">@totalUsers</p>
        </div>
        <div class="stat-card">
            <p>
                📕
            </p>
            <h3>Books Issued</h3>
            <p id="books-issued">@booksIssued</p>
        </div>
        <div class="stat-card">
            <p>📖</p>
            <h3>Available Books</h3>
            <p id="available-books">@availableBooks</p>
        </div>
    </div>

    <div class="dashboard-cards">
        <div class="card">
            <h2>Books</h2>
            <p>View all books in the library.</p>
            <a asp-action="Index" asp-controller="Books" class="button">Go to Books</a>
        </div>
        <div class="card">

            <h2>Authors<span>✍️</span></h2>
                <p>Author's Details</p>
                <a asp-action="AddAuthors" asp-controller="Books" class="button">View Authors</a>
            </div>
        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Manager") || User.IsInRole("Admin")))
        {
            <div class="card">
                <h2>Category</h2>
            <p>Books Categories</p>
            <a asp-action="AddCategory" asp-controller="Books" class="button">View Categories</a>
        </div>}
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Manager"))
        {
            <div class="card">
                <h2>Borrow History</h2>
                <p>View all borrow transactions.</p>
                <a asp-action="BorrowingRecords" asp-controller="IssueBook" class="button">View History</a>
            </div>
        }
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
        {
            <div class="card">
                <h2>Borrow History</h2>
                <p>View all borrow transactions.</p>
                <a asp-action="BorrowingRecords" asp-controller="IssueBook" class="button">View History</a>
            </div>
            <div class="card">
                <h2>Available Books</h2>
                <p>Available books for users.</p>
                <a asp-action="AvailableBooks" asp-controller="IssueBook" class="button">Available Books</a>
            </div>
        }
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            
            <div class="card">
                <h2>Users</h2>
                <p>Manage all system users.</p>
                <a asp-action="ListRoles" asp-controller="Administration" class="button">Manage Users</a>
            </div>
        }
    </div>
</div>
